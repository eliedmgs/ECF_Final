{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <h1>Vehicule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Energie</th>
                <th>Place</th>
                <th>Transmission</th>
                <th>Categorie</th>
                <th>Kilometrage</th>
                <th>Couleur</th>
                <th>Prix_journalier</th>
                <th>Prix_caution</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.marque }}</td>
                <td>{{ vehicule.modele }}</td>
                <td>{{ vehicule.energie }}</td>
                <td>{{ vehicule.place }}</td>
                <td>{{ vehicule.transmission }}</td>
                <td>{{ vehicule.categorie }}</td>
                <td>{{ vehicule.kilometrage }}</td>
                <td>{{ vehicule.couleur }}</td>
                <td>{{ vehicule.prixJournalier }}</td>
                <td>{{ vehicule.prixCaution }}</td>
                <td>
                    <a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}">show</a>
                    <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_new') }}">Create new</a>
{% endblock %}
